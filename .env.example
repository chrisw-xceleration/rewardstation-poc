# RewardStation Chat Integration - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Slack Configuration (Required for Slack integration)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret  
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Teams Configuration (Future Phase 2)
TEAMS_APP_ID=your_teams_app_id
TEAMS_APP_PASSWORD=your_teams_app_password

# RewardStation API Integration (Mock for POC)
REWARDSTATION_API_BASE=https://api.rewardstation.com
REWARDSTATION_CLIENT_ID=your_rewardstation_client_id
REWARDSTATION_CLIENT_SECRET=your_rewardstation_client_secret

# AI/Claude Configuration (Claude X - Recognition Expert)
CLAUDE_API_KEY=sk-ant-api03-your-claude-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Redis/Upstash (Future - for caching and rate limiting)
UPSTASH_REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Service URLs (for microservice communication)
CHAT_GATEWAY_URL=http://localhost:3000
MASLOW_AGENT_URL=http://localhost:3001
API_RELAY_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3003

# Development Flags
ENABLE_MOCKS=true
DEBUG_MODE=true

# Slack App Setup Instructions:
# 1. Go to https://api.slack.com/apps
# 2. Create a new Slack app
# 3. Add slash command: /rewardstation
# 4. Add OAuth scopes: chat:write, users:read, commands, channels:read
# 5. Install app to your workspace
# 6. Copy the tokens above